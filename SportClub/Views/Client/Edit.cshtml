        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.activen)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.activen)
            @Html.ValidationMessageFor(model => model.activen)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TrainerID, "Trainer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TrainerID", String.Empty)
            @Html.ValidationMessageFor(model => model.TrainerID)
        </div>

        <p>
            <input type="submit" value="Зберегти" />
        </p>
