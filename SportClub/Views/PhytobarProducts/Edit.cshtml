@model SportClub.Models.PhytobarProducts

@{
    ViewBag.Title = "Редактировать";
}

<h2>Редактировать</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PhytobarProducts</legend>

        @Html.HiddenFor(model => model.PhytobarProductsID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Products)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Products)
            @Html.ValidationMessageFor(model => model.Products)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Weight)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Weight)
            @Html.ValidationMessageFor(model => model.Weight)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Brand)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Brand)
            @Html.ValidationMessageFor(model => model.Brand)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DiscountsID, "Discounts")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DiscountsID", String.Empty)
            @Html.ValidationMessageFor(model => model.DiscountsID)
        </div>

        <p>
            <input type="submit" value="Сохраниить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернутся к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
