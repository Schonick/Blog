@model SportClub.Models.Ticket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ticket</legend>

        @Html.HiddenFor(model => model.TicketID)

        <div class="editor-label">
            @Html.LabelFor(model => model.NameTicket)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameTicket)
            @Html.ValidationMessageFor(model => model.NameTicket)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.numberOfLesson)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.numberOfLesson)
            @Html.ValidationMessageFor(model => model.numberOfLesson)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SportHallID, "SportHalls")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SportHallID", String.Empty)
            @Html.ValidationMessageFor(model => model.SportHallID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DiscountsID, "Discounts")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DiscountsID", String.Empty)
            @Html.ValidationMessageFor(model => model.DiscountsID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
